rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
    match /dojos/{document} {
      allow read: if resource.data.is_public == true || (request.auth && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[document]))
    }
  }
}